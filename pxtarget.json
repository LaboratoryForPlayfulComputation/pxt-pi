{
    "id": "pi",
    "name": "Raspberry Pi",
    "title": "MakeCode Pi",
    "corepkg": "core",
    "cloud": {
        "workspace": false,
        "packages": false
    },
    "bundleddirs": [
        "libs/core",
        "libs/netsimple"
    ],
    "runtime": {
      "mathBlocks": true,
      "loopsBlocks": true,
      "logicBlocks": true,
      "variablesBlocks": true,
      "textBlocks": true,
      "functionBlocks": true,
      "listsBlocks": true 
    },
    "simulator": {
        "autoRun": true
    },
    "appTheme": {
        "logoUrl": "https://github.com/Microsoft/pxt-sample",
        "homeUrl": "http://microsoft.github.io/pxt-sample/",
        "privacyUrl": "https://go.microsoft.com/fwlink/?LinkId=521839",
        "termsOfUseUrl": "https://go.microsoft.com/fwlink/?LinkID=206977",
        "betaUrl": "https://makecode.com/",
        "extendEditor" : true,
        "docMenu": [
            {
                "name": "About",
                "path": "/about"
            },
            {
                "name": "Docs",
                "path": "/docs"
            }
        ],
        "coloredToolbox": true,
        "monacoToolbox": true,
        "invertedMenu": false,
        "showHomeScreen": false,
        "homeScreenHero": "./static/hero.png",        
        "blocklyOptions": { 
            "grid": {
                "spacing": 45,
                "length": 7,
                "colour": "rgba(189, 195, 199, 0.30)",
                "snap": true
            }
        },
        "monacoColors": {
            "editor.background": "#ecf0f1"
        }
    }
}
