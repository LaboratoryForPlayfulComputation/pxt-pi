{
    "id": "pi",
    "name": "Raspberry Pi",
    "title": "MakeCode Pi",
    "corepkg": "core",
    "cloud": {
        "workspace": false,
        "packages": true
    },
    "bundleddirs": [
        "libs/core",
        "libs/gpio",
        "libs/grove",
        "libs/netsimple",
        "libs/sheets"
    ],
    "runtime": {
        "mathBlocks": true,
        "loopsBlocks": true,
        "logicBlocks": true,
        "variablesBlocks": true,
        "textBlocks": true,
        "functionBlocks": true,
        "listsBlocks": true,
        "onStartNamespace": "loops",
        "onStartColor": "#859900",
        "onStartWeight": 100
    },
    "simulator": {
        "autoRun": true
    },
    "appTheme": {
        "logoUrl": "https://github.com/Microsoft/pxt-sample",
        "homeUrl": "http://microsoft.github.io/pxt-sample/",
        "privacyUrl": "https://go.microsoft.com/fwlink/?LinkId=521839",
        "termsOfUseUrl": "https://go.microsoft.com/fwlink/?LinkID=206977",
        "betaUrl": "https://makecode.com/",
        "docMenu": [
            {
                "name": "About",
                "path": "/about"
            },
            {
                "name": "Docs",
                "path": "/docs"
            }
        ],
        "showHomeScreen": true,
        "homeScreenHero": "./static/hero.png",
        "invertedMenu": true,
        "invertedToolbox": false,
        "coloredToolbox": true,
        "invertedMonaco": true,
        "monacoToolbox": true,
        "simAnimationEnter": "fly right in",
        "simAnimationExit": "fly right out",
        "highContrast": true,
        "extendEditor": true,
        "blocklyOptions": {
            "grid": {
                "spacing": 45,
                "length": 7,
                "colour": "rgba(189, 195, 199, 0.30)",
                "snap": true
            }
        },
        "blocklyColors": {
            "insertionMarker": "#FFFFFF",
            "insertionMarkerOpacity": 0.5
        },
        "monacoColors": {
            "editor.background": "#002b36"
        },
        "blockColors": {
            "loops": "#859900",
            "logic": "#2aa198",
            "variables": "#dc322f",
            "math": "#d33682",
            "advanced": "#586e75",
            "functions": "#268bd2",
            "arrays": "#cb4b16",
            "text": "#b58900"
        },
        "allowPackageExtensions": true
    }
}